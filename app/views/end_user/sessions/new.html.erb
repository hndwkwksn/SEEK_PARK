<div class='container'>
  <div class='row'>
    <div class="mx-auto mt-5">
      <h2>ログイン</h2>

      <% if flash[:danger] %>
        <p class="text-red"><%= flash[:danger] %></p>
      <% end %>

      <%= form_with model: @end_user, url: session_path(resource_name), local: true do |f| %>
        <div class="field mt-3">
          <%= f.label :email, class: "mb-0" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, class: "mb-0" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me, class: "mb-0" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-3">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "end_user/shared/links" %>
   </div>
  </div>
</div>
