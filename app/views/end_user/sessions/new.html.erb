<div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5 form-border">
  <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>

  <div class="form-body p-4">
    <% if flash[:danger] %>
      <p class="text-red"><%= flash[:danger] %></p>
    <% end %>

    <%= form_with model: @end_user, url: session_path(resource_name), local: true do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'メールアドレス' %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">
            <i class="fas fa-lock"></i>
          </span>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'パスワード' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class: "mb-0" %>
        <%= f.label :remember_me %>
      <% end %>

      <%= f.submit "サインイン", class: "btn btn-lg btn-block btn-info mt-5" %>
    <% end %>

    <div class="mt-3">
      <%= render "end_user/shared/links" %>
    </div>
  </div>

</div>
