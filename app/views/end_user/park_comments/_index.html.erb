<% park.park_comments.each do |park_comment| %>
<div class="media border mb-3">
  <div class="post-prf">
    <%= link_to end_user_path(park_comment.end_user) do %>
      <%= image_tag park_comment.end_user.get_profile_image(60,60), class:"prf-img rounded-circle" %>
    <% end %>
  </div>
  <div class="media-body">
    <p><%= park_comment.end_user.name %></p>
    <p><%= park_comment.comment %></p>
    <span>
      <% if park_comment.end_user == current_end_user %>
        <%= link_to "削除", park_park_comment_path(park, park_comment), method: :delete, remote: true %>
      <% end %>
    </span>
  </div>
</div>
<% end %>
