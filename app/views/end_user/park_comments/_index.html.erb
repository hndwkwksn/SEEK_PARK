<% park.park_comments.each do |park_comment| %>
<div class="media border mb-3">
  <div class="post-prf">
    <%= link_to end_user_path(park_comment.end_user), class: "p-user-prf" do %>
      <%= image_tag park_comment.end_user.get_profile_image(60,60), class:"prf-img rounded-circle" %>
    <% end %>
  </div>
  <div class="media-body">
    <%= link_to (park.end_user), class: "p-user-name link-darkmode" do %>
      <p class="mt-3"><strong><%= park_comment.end_user.name %></strong></p>
    <% end %>
    <p><%= park_comment.comment %></p>
    <span>
      <% if park_comment.end_user == current_end_user %>
        <%= link_to park_park_comment_path(park, park_comment), method: :delete, class: "btn btn-danger mb-3", data: { confirm: '本当に削除しますか？' }, remote: true do %>
          <span>削除</span>
        <% end %>
      <% end %>
    </span>
  </div>
</div>
<% end %>
