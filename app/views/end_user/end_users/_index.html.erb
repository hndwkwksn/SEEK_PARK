<section class='col-md-8 col-sm-10 mx-2 mx-sm-auto shadow-lg'>

  <% end_users.each do |end_user| %>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag end_user.get_profile_image(100,100), class:"mt-1 rounded-circle" %>
          </div>

          <div class="col-8">
            <div class="row">
              <div><%= end_user.name %></div>
              <div>
                <% if current_end_user != end_user %>
                  <% if current_end_user.following?(end_user) %>
                    <div><%= link_to "フォロー外す", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-info" %></div>
                  <% else %>
                    <div><%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %></div>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div><%= end_user.introduction %></div>
            <div><%= link_to 'Show', end_user %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</section>
