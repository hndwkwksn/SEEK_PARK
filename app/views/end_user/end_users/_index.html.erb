<section class="m-1">

  <% end_users.each do |end_user| %>
    <div class="follow-list">
      <div class="post-prf">
        <%= link_to (end_user), class: "p-user-prf" do %>
          <%= image_tag end_user.get_profile_image(60,60), class:"prf-img rounded-circle" %>
        <% end %>
      </div>

      <div class="w-100">
        <div class="d-f-jc-sp">

          <div>
            <%= link_to end_user,class: "p-user-name link-darkmode" do %>
              <p><strong><%= end_user.name %></strong></p>
            <% end %>
          </div>
          <div>
            <% if current_end_user != end_user %>
              <% if current_end_user.following?(end_user) %>
                <div><%= link_to "フォロー外す", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-info" %></div>
              <% else %>
                <div><%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %></div>
              <% end %>
            <% end %>
          </div>

        </div>
        <div><%= end_user.introduction %></div>
      </div>
    </div>

  <% end %>

</section>
