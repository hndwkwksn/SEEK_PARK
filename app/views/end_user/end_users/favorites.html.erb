<div class="card-list-container">
  <h1>お気に入り</h1>

  <% @favorite_parks.each do |park|%>
  <div class="card w-50 mx-auto mt-1 shadow-lg">

    <%= link_to park.name, park, class: "m-2", data: {"turbolinks" => false} %>
    <%= image_tag park.get_image(500,500) %>

    <div class="card-body">
      <div class="row">

        <div class="col-2">
          <%= link_to(park.end_user) do %>
            <%= image_tag park.end_user.get_profile_image(100,100), class:"mt-2 rounded-circle" %></br>
          <% end %>
        </div>

        <div class="col-10">
          <p class="card-title"><%= park.end_user.name %></p>
          <p class="card-title"><%= park.address %></p>
          <p class="card-title"><%= park.introduction %></p>
          <p class="card-title">
          <% park.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
          </p>
        </div>

      </div>
    </div>

  </div>
  <% end %>

</div>
