<%= render 'layouts/sidebar' %>

<div class="col-md-10 col-lg-9">
  <div class="card user-info mx-auto mt-1 shadow-lg">

    <h1>プロフィール</h1>
    <div class="prf-container">
      <div>
        <div>
          <%= image_tag @end_user.get_profile_image(100,100), class:"prf-img mt-2 rounded-circle" %>
        </div>
      </div>

      <div class="post-info">
      	<div><strong><%= @end_user.name %></strong></div>
      	<div>
        <% if current_end_user != @end_user %>
          <div><%= render "end_user/relationships/btn", end_user: @end_user %></div>
        <% else %>
          <% if @end_user.name != "guestuser" %>
            <%= link_to edit_end_user_path(@end_user) do %>
              <span class="link-btn link">プロフィール編集</span>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>

      <div>
      	<div><%= @end_user.introduction %></div>
      </div>

      <div class="relationships">
        <div class="following">
          <%= link_to end_user_followings_path(@end_user) do %>
            <strong><%= @end_user.followings.count %></strong>
            <span>フォロー中</span>
          <% end %>
        </div>
        <div class="followers">
          <%= link_to end_user_followers_path(@end_user) do %>
            <strong><%= @end_user.followers.count %></strong>
            <span>フォロワー</span>
          <% end %>
        </div>
      </div>

      <div>
        <% if current_end_user == @end_user %>
          <%= link_to favorites_end_user_path(@end_user) do %>
            <span class="link-btn link">お気に入り記事</span>
          <% end %>
        <% end %>
      </div>
      <div>
        <% if current_end_user != @end_user && current_end_user.following?(@end_user) && @end_user.following?(current_end_user) %>
          <%= link_to chat_path(@end_user.id) do %>
            <span class="link-btn link">メッセージを送る</span>
          <% end %>
        <% end %>
      </div>
    </div>

  <%= render 'end_user/parks/index', parks: @parks %>
</div>
