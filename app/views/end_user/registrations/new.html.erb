<div class='container'>
  <div class='row'>
    <div class="mx-auto mt-5">
      <h2>新規登録</h2>

      <%= form_with model: @end_user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "end_user/shared/error_messages", resource: resource %>

        <div class="field mt-3">
          <%= f.label :name, class: "mb-0" %></br>
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>

        <div class="field mt-3">
          <%= f.label :email, class: "mb-0" %></br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, class: "mb-0" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password_confirmation, class: "mb-0" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "end_user/shared/links" %>
   </div>
  </div>
</div>
